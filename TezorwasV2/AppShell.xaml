<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TezorwasV2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:TezorwasV2"
    xmlns:tezorwas="using:TezorwasV2"
    xmlns:appPages="using:TezorwasV2.View.AppPages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior  StatusBarColor="{StaticResource BACKGROUND}" 
                                    StatusBarStyle="DarkContent">
        </toolkit:StatusBarBehavior>

    </Shell.Behaviors>

    <ShellContent ContentTemplate="{DataTemplate tezorwas:MainPage}"
               Route="MainPage"
               Shell.FlyoutBehavior="Disabled"/>
    <TabBar>
        <ShellContent   Title="TasksView"
                     ContentTemplate="{DataTemplate appPages:TasksView}"
                     Route="TasksView"></ShellContent>
        <ShellContent   Title="RecyclingPoints"
                     ContentTemplate="{DataTemplate appPages:RecyclingPointsView}"
                     Route="RecyclingPoints"></ShellContent>
        <ShellContent   Title="Carboon Foot Print"
                     ContentTemplate="{DataTemplate appPages:CarbonFootPrintView}"
                     Route="CarbonFootPrintView"></ShellContent>
    </TabBar>

</Shell>
