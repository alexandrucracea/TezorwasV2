<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TezorwasV2.View.Authentication.RegisterView"
             xmlns:core="http://schemas.syncfusion.com/maui"
             Title="RegisterView"
             Background="{StaticResource BACKGROUND}">
    <ScrollView x:Name="ScrollViewX">
        <VerticalStackLayout>
            <ImageButton x:Name="BackButton"
                         Source="Resources/Images/back_button.png"
                         HorizontalOptions="StartAndExpand"
                         VerticalOptions="StartAndExpand"
                         Aspect="AspectFit"
                         Clicked="BackButton_Clicked"
                         HeightRequest="50"
                         Padding="2"
                         Margin="0,10,0,0">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale"
                                        Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale"
                                        Value="0.6" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="Scale" 
                                        Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </ImageButton>
            <Label  x:Name="MessageLabel"
                         Text="Create an accout"
                         FontSize="32"
                         FontFamily="Inter-VariableFont"
                         FontAttributes="Bold"
                         Margin="20,20,0,0"></Label>
            <Label  x:Name="InstructionsLabel"
                         Text="Enter the following details:"
                         FontSize="20"
                         FontFamily="Inter-VariableFont"
                         Margin="20,10,0,40"></Label>

            <core:SfTextInputLayout Hint="First Name"
                                     ContainerType="Outlined"
                                     OutlineCornerRadius="30"
                                     HeightRequest="80"
                                     WidthRequest="320"
                                     ContainerBackground="{StaticResource BACKGROUND}"
                                     Stroke="{StaticResource TEXT-COLOR-LIGHT}">
                <Entry   x:Name="FirstNameEntry"
                         Keyboard="Default"
                         Text="{Binding FirstName}"
                         Completed="FirstNameEntry_Completed">
                </Entry>
                <core:SfTextInputLayout.HintLabelStyle>
                    <core:LabelStyle TextColor ="{StaticResource TEXT-COLOR}" FontFamily="Lobster-Regular"/>
                </core:SfTextInputLayout.HintLabelStyle>
            </core:SfTextInputLayout>

            <core:SfTextInputLayout Hint="Last Name"
                                     ContainerType="Outlined"
                                     OutlineCornerRadius="30"
                                     WidthRequest="320"
                                     HeightRequest="80"
                                     ContainerBackground="{StaticResource BACKGROUND}"
                                     Stroke="{StaticResource TEXT-COLOR-LIGHT}"
                                     >
                <Entry  x:Name="LastNameEntry"
                         Keyboard="Default"
                         Text="{Binding LastName}"
                         FontSize="16"
                         Completed="LastNameEntry_Completed">
                </Entry>
                <core:SfTextInputLayout.HintLabelStyle>
                    <core:LabelStyle  TextColor ="{StaticResource TEXT-COLOR}" FontFamily="Lobster-Regular"/>
                </core:SfTextInputLayout.HintLabelStyle>

            </core:SfTextInputLayout>

            <core:SfTextInputLayout Hint="Email"
                                     ContainerType="Outlined"
                                     OutlineCornerRadius="30"
                                     HeightRequest="80"
                                     WidthRequest="320"
                                     ContainerBackground="{StaticResource BACKGROUND}"
                                     Stroke="{StaticResource TEXT-COLOR-LIGHT}">
                <Entry   x:Name="EmailEntry"
                         Keyboard="Email"
                         Text="{Binding Email}"
                         Completed="EmailEntry_Completed">
                </Entry>
                <core:SfTextInputLayout.HintLabelStyle>
                    <core:LabelStyle TextColor ="{StaticResource TEXT-COLOR}" FontFamily="Lobster-Regular"/>
                </core:SfTextInputLayout.HintLabelStyle>

            </core:SfTextInputLayout>

            <core:SfTextInputLayout Hint="Password"
                                     ContainerType="Outlined"
                                     OutlineCornerRadius="30"
                                     HeightRequest="80"
                                     WidthRequest="320"
                                     ContainerBackground="{StaticResource BACKGROUND}"
                                     Stroke="{StaticResource TEXT-COLOR-LIGHT}">
                <Entry   x:Name="PasswordEntry"
                         IsPassword="true"
                         Text="{Binding Password}"
                         Completed="PasswordEntry_Completed"/>
                <core:SfTextInputLayout.HintLabelStyle>
                    <core:LabelStyle TextColor ="{StaticResource TEXT-COLOR}" FontFamily="Lobster-Regular"/>
                </core:SfTextInputLayout.HintLabelStyle>

            </core:SfTextInputLayout>
            <core:SfTextInputLayout Hint="Confirm password"
                                     ContainerType="Outlined"
                                     OutlineCornerRadius="30"
                                     HeightRequest="80"
                                     WidthRequest="320"
                                     ContainerBackground="{StaticResource BACKGROUND}"
                                     Stroke="{StaticResource TEXT-COLOR-LIGHT}">
                <Entry  x:Name="ConfirmPasswordEntry"
                         IsPassword="true"
                         Text="{Binding ConfirmPassword}"
                         Completed="ConfirmPasswordEntry_Completed"/>
                <core:SfTextInputLayout.HintLabelStyle>
                    <core:LabelStyle TextColor ="{StaticResource TEXT-COLOR}" FontFamily="Lobster-Regular"/>
                </core:SfTextInputLayout.HintLabelStyle>

            </core:SfTextInputLayout>
            <Button Text="Register"
                    x:Name="RegisterButton"
                    Background="{StaticResource PRIMARY-COLOR}"
                    Margin="0,70,0,0"
                    CornerRadius="40"
                    HeightRequest="60"
                    WidthRequest="320"
                    FontFamily="Inter-VariableFont"
                    FontSize="24"
                    FontAttributes="Bold"
                    Command="{Binding RegisterCommand}"
                    Clicked="RegisterButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>